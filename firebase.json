{
  "hosting": {
    "site": "portfolioTharaka",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/resume.pdf",
        "destination": "/resume.pdf"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
